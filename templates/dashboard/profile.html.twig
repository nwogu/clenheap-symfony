{% extends 'dashboard/index.html.twig' %}



{% block content %}


<div class="col-12">

    <h2>Profile</h2>
    <hr>
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3">
                <div class="row">
                <h3>{{user.firstName}} {{user.lastName}}</h3>
                </div>
            <div class="row">

        </div>
</div>
<div class="col-sm-6 col-md-6 col-lg-6">
    <p>{{user.address}}</p>
    <p> {{user.phone}}</p>
</div>


<div class="col-sm-3 col-md-3 col-lg-3">
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#profileModal">
  Update Profile
</button>
</div>

{# Modal #}
<form method='post' action='{{ path('edit-profile') }}'>
<div class="modal fade" id="profileModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Your Profile</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <input type='text' class='form control' name='first' value='{{user.firstName}}'>
        <input type='text' class='form control' name='last' value='{{user.lastName}}'>
        <input type='text' class='form control' name='phone' value='{{user.phone}}'>
        <input type='text' class='form control' name='address' value='{{user.address}}'>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
</form>


{% endblock %}