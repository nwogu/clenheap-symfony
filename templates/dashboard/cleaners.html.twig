{% extends 'dashboard/index.html.twig' %}


{% block content %}
<div class="col-12">
<h2> Cleaner</h2>
<hr>
<div class="row">
<div class="col-sm-3 col-md-3 col-lg-3">
<div class="row">
<img src="{{ asset('images/profile-placeholder.jpg') }}" clas="img-thumbnail" alt="cleaner profile picture" width="200" height="200">
</div>
<div class="row">
<h3>{{user.cleaner.firstName}} {{user.cleaner.lastName}}</h3>
</div>

</div>
<div class="col-sm-6 col-md-6 col-lg-6">
<p>{{user.cleaner.hobbies}}</p>
</div>

<div class="col-sm-3 col-md-3 col-lg-3">

    <div class="row">
        <div class='col-12' style='margin-top:10px'>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#rateModal">
              Rate Cleaner
            </button>
        </div>
    </div>
</div>

</div>

<form method='post' action='{{ path('rate-cleaner') }}'>
<div class="modal fade" id="rateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Rate {{user.cleaner.firstName}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <select name='rate-cleaner' class='form-control'>
       <option value='5' selected> 5 | Great Service</option>
       <option value='4'> 4 | Good Service</option>
       <option value='3'> 3 | Fair Service</option>
       <option value='2'> 2 | Poor Service </option>
       <option value='1'> 1 | Bad Service</option>
       </select>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</div>
</form>
{% endblock %}